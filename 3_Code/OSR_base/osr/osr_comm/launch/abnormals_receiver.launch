<launch>
  
	<!-- Abnormals configuration -->
	<arg name="abnormals_period" default="10" doc="period" />
	
	<!-- Robot ID -->
	<arg name="robot_id" default="5" doc="robot id" /> 
	
	<!-- Frame ID -->
	<arg name="robot_type" default="mobile" doc="robot_type (mobile or fixed)" />
	<arg name="map_frame_id" default="map" doc="map_frame_id" />
	<arg name="robot_frame_id" default="mobile_02" doc="frame_id and agent_id(mobile_01, mobile_02, fixed_01, fixed_02)" />
	<arg name="world_frame_id" default="world" doc="world_frame_id" />
	
	<!-- UDP communication to server -->
	<arg name="udp_ip_address" default="192.168.0.21" doc="udp id address" />
	<arg name="udp_port" default="12345" doc="udp port" />
	
	<arg name="agent_abnormals_topic" default="/osr/agent_abnormals" doc="agent_abnormals_topic" />
	
	
	
	
	
  	<node pkg="osr_comm" type="abnormals_receiver" name="abnormals_receiver_$(arg robot_frame_id)" output="screen">
		<param name="period" value="$(arg abnormals_period)" />
		<param name="map_frame_id" value="$(arg map_frame_id)" />
		<param name="agent_abnormals_topic" value="$(arg agent_abnormals_topic)" />
        <param name="udp_port" value="$(arg udp_port)" />

  	</node>
</launch>